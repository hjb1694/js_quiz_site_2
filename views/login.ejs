<!DOCTYPE html>
<html lang="en-US">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
    <body class="login-page-body">
        <!-- Header -->
        <%- include('./partials/header.ejs') %>
        <!-- End Header -->
        <!-- Navigation -->
        <%- include('./partials/nav.ejs') %>
        <!-- End Navigation -->
        <div class="container p10">
            <main>
                <form class="login-form">
                    <h1 class="login-form__header">Login</h1>
                    <div class="form-group">
                        <input type="text" id="email" class="text-input" placeholder="Email"/>
                        <label for="email" class="text-input-label">Email</label>
                    </div>
                    <div class="form-group">
                        <input id="password" type="password" class="text-input" placeholder="Password"/>
                        <label for="password" class="text-input-label">Password</label>
                    </div>
                    <div class="form-group">
                        <button id="subbut" class="btn btn--blue">Login</button>
                    </div>
                    <div class="login-form__errbox errbox">
                        <!-- Errors Go Here -->
                    </div>
                </form>
            </main>
        </div>
        <script src="/js/login.bundle.js"></script>
    </body>
</html>