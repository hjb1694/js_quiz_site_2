<!DOCTYPE html>
<html lang="en-US">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
    <body class="register-page-body">
        <!-- Header -->
        <%- include('./partials/header.ejs') %>
        <!-- End Header -->
        <!-- Navigation -->
        <%- include('./partials/nav.ejs') %>
        <!-- End Navigation -->
        <div class="container p10">
            <main>
                <form class="registration-form" autocomplete="off">
                    <h1 class="registration-form__header">Register</h1>
                    <div class="form-group">
                        <input type="text" id="name" class="text-input" placeholder="Enter Your Name"/>
                        <label for="name" class="text-input-label">Your Name</label>
                    </div>
                    <div class="form-group">
                        <input id="email" type="email" class="text-input" placeholder="Email"/>
                        <label for="email" class="text-input-label">Email</label>
                    </div>
                    <div class="form-group">
                        <input type="password" id="createPass" class="text-input" maxlength="50" placeholder="Create a Password"/>
                        <label for="createPass" class="text-input-label">Create a Password</label>
                    </div>
                    <div class="form-group">
                        <input type="password" id="confirmPass" class="text-input" maxlength="50" placeholder="Confirm New Password"/>
                        <label for="confirmPass" class="text-input-label">Confirm New Password</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="subbut" class="btn btn--blue">Create Account</button>
                    </div>
                    <div class="registration-form__errbox errbox" id="errbox">
                        <!--Errors go here -->
                    </div>
                </form>
            </main>
        </div>
        <script src="/js/register.bundle.js"></script>
    </body>
</html>